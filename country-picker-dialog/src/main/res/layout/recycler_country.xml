<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_country"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:paddingBottom="@dimen/dialog_country_padding_bottom"
    android:paddingTop="@dimen/dialog_country_padding_top">

    <io.github.hendraanggrian.countrypickerdialog.internal.RoundImageView
        android:id="@+id/imageview_country_flag"
        android:layout_width="@dimen/dialog_country_flag_size"
        android:layout_height="@dimen/dialog_country_flag_size"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dialog_country_flag_margin_start"
        android:layout_marginStart="@dimen/dialog_country_flag_margin_start"
        android:scaleType="centerCrop"
        android:src="@drawable/flag_id"/>

    <TextView
        android:id="@+id/textview_country_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dialog_country_name_margin_end"
        android:layout_marginLeft="@dimen/dialog_country_name_margin_start"
        android:layout_marginRight="@dimen/dialog_country_name_margin_end"
        android:layout_marginStart="@dimen/dialog_country_name_margin_start"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
</FrameLayout>